<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_50"
        android:background="@drawable/action_bar_background"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/wh_60"
            android:layout_height="@dimen/wh_50"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/ic_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_device_select"
        android:layout_marginStart="@dimen/mg_36"
        android:layout_marginEnd="@dimen/mg_36"
        android:layout_marginTop="@dimen/mg_80"
        android:layout_marginBottom="@dimen/mg_36"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_padding_start"
            android:paddingEnd="@dimen/text_padding_end"
            android:layout_marginBottom="@dimen/mg_10"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/ts_18"
            android:text="@string/text_device_select"/>
        <GridView
            android:id="@+id/grid_device_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grid_border"
            android:paddingTop="@dimen/mg_20"
            android:paddingBottom="@dimen/mg_20"
            android:scrollbars="none"
            android:verticalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:numColumns="3">
        </GridView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_device_select"
        android:layout_width="@dimen/wh_220"
        android:layout_height="@dimen/wh_42"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mg_50"
        android:layout_centerHorizontal="true"
        android:background="@color/btn_color"
        android:textColor="@color/text_white"
        android:text="@string/device_next" />
</RelativeLayout>