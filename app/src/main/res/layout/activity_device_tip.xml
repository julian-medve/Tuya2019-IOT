<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_50"
        android:background="@drawable/action_bar_background"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/wh_60"
            android:layout_height="@dimen/wh_50"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/ic_back"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_device_tip"
        android:layout_width="@dimen/wh_240"
        android:layout_height="@dimen/wh_240"
        android:layout_centerInParent="true"
        android:src="@mipmap/device_light_on"/>

    <Button
        android:id="@+id/btn_device_tip"
        android:layout_width="@dimen/wh_220"
        android:layout_height="@dimen/wh_42"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mg_50"
        android:layout_centerHorizontal="true"
        android:background="@color/btn_color"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:text="@string/text_device_tip" />
</RelativeLayout>