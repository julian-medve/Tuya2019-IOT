<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_name"
            android:gravity="center"
            android:text="Image"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/ts_12" />

        <ImageView
            android:layout_width="@dimen/wh_50"
            android:layout_height="@dimen/wh_50"
            android:padding="@dimen/mg_5"
            android:src="@mipmap/add"
            android:scaleType="fitXY"
            android:id="@+id/item_image" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="@dimen/wh_18"
        android:layout_height="@dimen/wh_18"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/mg_30"
        android:layout_marginTop="@dimen/mg_44"
        android:src="@drawable/ic_check" />
</RelativeLayout>