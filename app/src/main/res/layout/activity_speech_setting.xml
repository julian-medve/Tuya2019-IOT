<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_50"
        android:background="@drawable/action_bar_background"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/wh_60"
            android:layout_height="@dimen/wh_50"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/ic_back"/>
        <Spinner
            android:id="@+id/spinner_select_lang"
            android:layout_width="@dimen/wh_80"
            android:layout_height="@dimen/wh_50"
            android:layout_alignParentEnd="true"
            android:dropDownVerticalOffset="@dimen/wh_50"
            android:spinnerMode="dropdown"
            android:gravity="center"
            android:background="@drawable/speech_setting_bg"
            android:drawSelectorOnTop="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="@dimen/mg_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/speech_setting_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/speech_setting_all"
                    android:textSize="@dimen/ts_20"
                    android:textColor="@color/text_white"/>
                <Switch
                    android:id="@+id/check_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mg_20"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_turn_on"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_on"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_turn_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/turn_on_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_command"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/turn_on_command"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_turn_on_respond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_on_respond"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_turn_on_respond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/turn_on_respond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_respond"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/turn_on_respond"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_turn_off"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_off"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_turn_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/turn_off_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_command"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/turn_off_command"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_turn_off_respond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_off_respond"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_turn_off_respond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/turn_off_respond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_respond"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/turn_off_respond"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_turn_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_reverse"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_turn_reserve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/turn_reserve_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:background="@android:color/transparent"
                        android:hint="@string/add_respond"
                        android:singleLine="true"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/ts_18" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/turn_reserve_command"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_get_on"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_get_on"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_get_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/get_on_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_respond"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/get_on_command"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/speech_setting_get_off"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/speech_turn_get_off"
                        android:textSize="@dimen/ts_18"
                        android:layout_marginStart="@dimen/mg_20"
                        android:textColor="@color/text_white"/>
                    <Switch
                        android:id="@+id/switch_get_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/get_off_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mg_35"
                        android:layout_marginEnd="@dimen/mg_35"
                        android:hint="@string/add_respond"
                        android:textColorHint="@color/text_grey"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/ts_18"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mg_5"
                        android:layout_below="@+id/get_off_command"
                        android:src="@mipmap/text_divider"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>