<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="@dimen/mg_80"
        android:layout_height="@dimen/mg_80"
        android:background="@drawable/btn_white_outline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/wh_20">

        <LinearLayout
            android:layout_width="@dimen/wh_50"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wh_50"
                android:layout_height="@dimen/wh_50"
                android:padding="@dimen/mg_5"
                android:src="@mipmap/add"
                android:scaleType="fitXY"
                android:id="@+id/item_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/wh_18"
                android:id="@+id/item_name"
                android:layout_gravity="center"
                android:text="Image"
                android:singleLine="true"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/ts_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/wh_18"
                android:id="@+id/item_type"
                android:layout_gravity="center"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/ts_12"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="@dimen/wh_18"
            android:layout_height="@dimen/wh_18"
            android:src="@drawable/ic_check"
            android:layout_gravity="top|right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/wh_10"/>
    </FrameLayout>

</RelativeLayout>